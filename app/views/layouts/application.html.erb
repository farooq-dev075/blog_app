<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="container">
      <% if user_signed_in? %>
        <%= render 'navs/nav' %>
        <%= render 'headers/header' %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
